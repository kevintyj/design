{
	"name": "@design/monorepo",
	"version": "1.0.0",
	"description": "Comprehensive color generation system based on Radix UI colors",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "bun run --filter='./packages/*' build",
		"dev": "bun run --filter='./packages/*' dev",
		"test": "bun run --filter='./packages/*' test",
		"lint": "bun run --filter='./packages/*' lint",
		"clean": "rm -rf packages/*/dist packages/*/node_modules",
		"precommit": "bun run --filter='./packages/*' format",
		"colors": "bun packages/cli/src/cli.ts",
		"colors:figma": "bun packages/cli/src/cli.ts figma",
		"colors:quick": "bun packages/cli/src/cli.ts quick",
		"colors:generate": "bun packages/cli/src/cli.ts generate",
		"colors:list": "bun packages/cli/src/cli.ts list",
		"colors:validate": "bun packages/cli/src/cli.ts validate",
		"example:basic": "bun packages/examples/src/basic.ts",
		"example:advanced": "bun packages/examples/src/advanced.ts",
		"figma:dev": "bun run --filter='./packages/figma-plugin' dev",
		"figma:build": "bun run --filter='./packages/figma-plugin' build",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.1.1",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@types/bun": "^1.2.18",
		"husky": "^9.1.7",
		"typescript": "^5.8.3"
	},
	"engines": {
		"bun": ">=1.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/your-username/design-system"
	},
	"keywords": [
		"design-system",
		"colors",
		"radix-ui",
		"css-variables",
		"monorepo",
		"typescript"
	],
	"author": "Your Name",
	"license": "MIT"
}
