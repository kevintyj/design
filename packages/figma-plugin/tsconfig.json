{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["ES2017", "DOM"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"declaration": true,
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"noEmit": false,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["dist", "node_modules"]
}
