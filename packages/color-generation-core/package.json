{
	"name": "@design/color-generation-core",
	"version": "1.0.0",
	"description": "Core color generation logic using Radix UI color system",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"exports": {
		".": "./src/index.ts"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "bun build src/index.ts --outdir dist --target bun && bun run build:types",
		"build:types": "tsc --emitDeclarationOnly --outDir dist",
		"dev": "bun --watch src/index.ts",
		"test": "bun test",
		"lint": "biome check src/",
		"format": "biome format --write src/"
	},
	"dependencies": {
		"@radix-ui/colors": "^3.0.0",
		"bezier-easing": "^2.1.0",
		"colorjs.io": "^0.5.2"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"typescript": "^5.0.0"
	},
	"keywords": [
		"colors",
		"design-system",
		"radix-ui",
		"color-scales",
		"typescript"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/your-username/design-system",
		"directory": "packages/color-generation-core"
	},
	"license": "MIT",
	"publishConfig": {
		"access": "public"
	}
}
